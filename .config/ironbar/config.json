{
  "monitors": {
    "DP-3": [
      {
        "position": "bottom",
        "start": [
          {
            "type": "focused",
            "truncate": {
              "mode": "middle",
              "max_length": 30
            }
          }
        ],
        "center": [
          {
            "type": "music",
            "truncate": "end"
          },
          {
            "type": "clock",
            "format": "%d.%m.%Y %H:%M"
          }
        ],
        "end": [
          {
            "type": "tray"
          },
          {
            "type": "script",
            "cmd": "~/.config/waybar/scripts/keyboard_layout.py",
            "mode": "watch"
          },
          {
            "type": "volume",
            "format": "{icon} {percentage}%",
            "max_volume": 100,
            "on_scroll_up": "swayosd-client --output-volume 5",
            "on_scroll_down": "swayosd-client --output-volume -5"
          }
        ]
      },
      {
        "position": "right",
        "exclusive_zone": false,
        "height": 50,
        "margin": {
          "bottom": 9999
        },
        "start": [
          {
            "type": "workspaces",
            "name_map": {
              "browser": "󰖟",
              "code": "",
              "orgmode": ""
            }
          }
        ]
      }
    ],
    "HDMI-A-1": {
      "position": "top",
      "height": 42,
      "start": [
        {
          "type": "sys_info",
          "format": [
            " {memory_used} / {memory_total} GB",
            " {cpu_percent}% | {cpu_frequency} GHz | {temp_c@CPUTIN}°C"
          ]
        }
      ],
      "center": [
        {
          "type": "clock",
          "format": "%d.%m.%Y %H:%M"
        }
      ],
      "end": [
        {
          "type": "sys_info",
          "format": [
            "󰋊 ({disk_percent@/}%)",
            "󰥔 {uptime}"
          ],
          "interval": {
            "cpu": 1,
            "disks": 300,
            "memory": 30,
            "temps": 5
          }
        }
      ]
    }
  }
}
