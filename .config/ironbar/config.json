{
  "monitors": {
    "eDP-1": [
      {
        "position": "right",
        "start": [
          {
            "type": "notifications",
            "show_count": true,
            "icons": {
              "closed_none": "󰍥",
              "closed_some": "󱥂",
              "closed_dnd": "󱅯",
              "open_none": "󰍡",
              "open_some": "󱥁",
              "open_dnd": "󱅮"
            }
          },
          {
            "type": "workspaces",
            "name_map": {
              "browser": "󰖟",
              "code": "",
              "orgmode": ""
            }
          }
        ],
        "center": [
          {
            "type": "clock"
          }
        ],
        "end": [
          {
            "type": "tray"
          },
          {
            "type": "script",
            "cmd": "~/.config/scripts/keyboard_layout.py",
            "mode": "watch"
          },
          {
            "type": "upower",
            "format": "{percentage}%"
          }
        ]
      },
      {
        "position": "bottom",
        "exclusive_zone": false,
        "autohide": 420,
        "center": [
          {
            "format": [
              " {cpu_percent}% | {cpu_frequency} GHz | {temp_c@CPUTIN}°C",
              " {memory_used} / {memory_total} GB ({memory_available} | {memory_percent}%) | {swap_used} / {swap_total} GB ({swap_free} | {swap_percent}%)",
              "󰋊 {disk_used#T@/:.1} / {disk_total#T@/:.1} TB ({disk_percent@/}%) | {disk_read} / {disk_write} MB/s",
              "󰓢 {net_down@wlan0} / {net_up@wlan0} Mbps",
              "󰖡 {load_average_1} | {load_average_5} | {load_average_15}",
              "󰥔 {uptime}"
            ],
            "interval": {
              "cpu": 1,
              "disks": 300,
              "memory": 30,
              "networks": 3,
              "temps": 5
            },
            "type": "sys_info"
          }
        ]
      }
    ],
    "DP-3": [
      {
        "position": "bottom",
        "exclusive_zone": false,
        "margin": {
          "left": 1642
        },
        "autohide": 142,
        "start": [
          {
            "type": "music"
          }
        ]
      },
      {
        "position": "left",
        "start": [
          {
            "type": "notifications",
            "show_count": true,
            "icons": {
              "closed_none": "󰍥",
              "closed_some": "󱥂",
              "closed_dnd": "󱅯",
              "open_none": "󰍡",
              "open_some": "󱥁",
              "open_dnd": "󱅮"
            }
          },
          {
            "type": "workspaces",
            "name_map": {
              "browser": "󰖟",
              "code": "",
              "orgmode": ""
            },
            "on_scroll_up": "niri msg action focus-workspace-up",
            "on_scroll_down": "niri msg action focus-workspace-down"
          }
        ],
        "center": [
          {
            "type": "focused",
            "show_title": false
          },
          {
            "type": "clock",
            "format": "%d\n%m\n\n%H\n%M",
            "orientation": "horizontal",
            "justify": "center"
          }
        ],
        "end": [
          {
            "type": "tray"
          },
          {
            "type": "script",
            "cmd": "~/.config/scripts/keyboard_layout.py",
            "mode": "watch"
          },
          {
            "type": "volume",
            "format": "{icon} {percentage}%",
            "max_volume": 100,
            "on_scroll_up": "swayosd-client --output-volume 5",
            "on_scroll_down": "swayosd-client --output-volume -5",
            "on_click_right": "pavucontrol"
          }
        ]
      }
    ],
    "HDMI-A-1": {
      "position": "top",
      "height": 42,
      "start": [
        {
          "type": "sys_info",
          "format": [
            " {cpu_percent}%",
            " {memory_used:.2}/{memory_total:.2}GB",
            "󰋊 {disk_percent@/}%"
          ]
        },
        {
          "type": "workspaces"
        }
      ],
      "center": [
        {
          "type": "clock",
          "format": "%d.%m.%Y %H:%M"
        }
      ],
      "end": [
        {
          "type": "sys_info",
          "format": [
            "󰥔 {uptime}"
          ],
          "interval": {
            "cpu": 1,
            "disks": 300,
            "memory": 30,
            "temps": 5
          }
        }
      ]
    }
  }
}
